extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title update Details
					div.signup-wall
						form(class='form-signin', action='/update', method='POST')
							input(type='hidden', name='id', class='form-control', placeholder='Username',required, value= user._id)
							input(type='email', name='email', class='form-control', placeholder='Email',required,autofocus,  value= user.email)
							input(type='text', name='firstName', class='form-control', placeholder='First Name',required, value= user.firstName)
							input(type='text', name='lastName', class='form-control', placeholder='Last Name',required, value=user.lastName)
							button(class='btn btn-lg btn-primary btn-block', type='submit') update
							span.clearfix